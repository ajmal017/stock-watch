{% macro django_messages(messages) %}
  {% for message in messages %}
    <div class="alert
      {% if 'error' in message.tags %}
          alert-danger
      {% elif 'warn' in message.tags %}
          alert-warning
      {% elif 'info' in message.tags %}
          alert-info
      {% else %}
          alert-success
      {% endif %}
      {{ message.tags }}
    ">
      <button type="button" class="close" data-dismiss="alert">
        <span aria-hidden="true">&times;</span>
        <span class="sr-only">{{ _("Close") }}</span>
      </button>
      {% if 'safe' in message.tags %}
        {{ message|safe }}
      {% else %}
        {{ message }}
       {% endif %}
    </div>
  {% endfor %}
{% endmacro %}

{% macro render_stock_data(stock_datas) %}
  <table class="table table-striped">
    <thead>
      <tr>
        <td>Company</td>
        <td>Date</td>
        <td>High</td>
        <td>Low</td>
        <td>Quarter</td>
        <td>Quantity</td>
        <td>Gross Value</td>
        <td>Reference</td>
      </tr>
    </thead>
    <tbody>
      {% for sd in stock_datas %}
        <tr>
          <td>{{ sd.company }}</td>
          <td>{{ sd.date.strftime('%d/%m/%Y') }}</td>
          <td>{{ sd.format(sd.high|round(3)) }}</td>
          <td>{{ sd.format(sd.low|round(3)) }}</td>
          <td>{{ sd.format(sd.quarter|round(3)) }}</td>
          <td>{{ sd.quantity }}</td>
          <td>{{ sd.format(sd.gross_value|round(2)) }}</td>
          <td>{{ sd.reference }}</td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
{% endmacro %}
