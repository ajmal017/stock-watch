{% extends 'standard.jinja' %}

{% block content %}
  <div class="pt-5">
    <div class="row pb-5">
      <div class="col-12">
        <div class="form-inline float-right">
          <div class="form-group pr-3">
            <select name="reference" allow-clear placeholder="Filter by reference..." class="form-control" id="id_reference" data-initial="{{ current_ref }}">
              <option value>---------</option>
              {% for ref in ref_choices %}
                <option value="{{ ref }}">{{ ref }}</option>
              {% endfor %}
            </select>
          </div>
          <div class="form-group">
            <a class="btn btn-primary" data-method="POST" download href="{{ url('archive-export') }}?ref={{ current_ref }}">
              <span class="fa fa-download"></span> Export to CSV
            </a>
          </div>
        </div>
      </div>
    </div>
    {{ display.render_stock_data(object_list) }}
  </div>
  <script>
    window.url = '{{ request.path }}'
  </script>
{% endblock %}
